scalar Date

type User
{
	id: ID!
	type: String
	email: String
	username: String
	password: String
}

type Reservation
{
	id: ID
	reservationDate: Date!
	arrivalDate: Date!
	departureDate: Date!
	numberOfOccupants: Int!
	rooms: [Room]
}

type Room
{
	id: ID!
	name: String
	perks: String
	numberOfBeds: Int
	rate: Int
}

input UserInput
{
	id: String
	type: String
	email: String
	username: String
	password: String
}

input ReservationInput
{
	id: String
	reservationDate: Date # Replace with serverside date
	arrivalDate: Date!
	departureDate: Date!
	numberOfOccupants: Int!
	rooms: [RoomInput]
}

input RoomInput
{
	id: ID
	name: String
	perks: String
	numberOfBeds: Int
	rate: Int
}

type Query
{
	reservationById(id: ID!): Reservation
	roomById(id: ID!): Room
	availableRoomsByDates(arrivalDate: Date!, departureDate: Date!): [Room]
	loginUser(input: UserInput): User
}

type Mutation
{
	createReservation(input: ReservationInput): Reservation
	removeReservation(input: ReservationInput): String
	createRooms(input: [RoomInput]): [Room]
	removeRooms(input: [RoomInput]): String
	createUser(input: UserInput): User
	removeUser(input: UserInput): String
}